<Window x:Class="SnakeGame1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Snake Game" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF1E3C72">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Classic Mode" Name="ClassicModeButton" Width="150" Click="ClassicModeButton_Click"/>
            <Button Content="Hard Mode" Name="HardModeButton" Width="150" Margin="0,20,0,0" Click="HardModeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>